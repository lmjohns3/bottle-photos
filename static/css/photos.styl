$nav = 150px

:focus { outline: none }

body
 padding: 0
 background: #333
 font-family: 'Source Sans Pro', sans-serif

#groups
  padding-left: 20px

  li
    color: #ccc
    margin: 0 60px 20px 0

    .thumbs
      position: relative
      height: 100px

      .frame
        background: #ffe
        padding: 6px
        border-radius: 3px
        position: absolute
        bottom: 0
        transition: 0.5s

        img { max-width: 80px; max-height: 80px }

      .frame:nth-child(1) { left:  5px; }
      .frame:nth-child(2) { left: 10px; }
      .frame:nth-child(3) { left: 15px; }
      .frame:nth-child(4) { left: 20px; }

    &:hover
      .frame:nth-child(1) { bottom: 50px; left: -30px; }
      .frame:nth-child(2) { bottom:  0px; left: -30px; }
      .frame:nth-child(3) { bottom: 50px; left:  50px; }
      .frame:nth-child(4) { bottom:  0px; left:  50px; }

#nav
  width: 100%
  background: #222
  padding: 5px
  margin: 0 0 5px 0

.tags
  li
    color: #444
    border: solid 1px #444
    margin: 5px 0 0 5px
    padding: 1px 3px
    border-radius: 3px
    cursor: pointer

    &.selected { background: #999 }

#thumbs
  padding-right: 20px

  .thumb
    height: 80px
    max-width: 80px
    margin: 0 0 20px 20px
    cursor: pointer
    position: relative

    img
      display: inline
      vertical-align: middle
      max-height: 80px
      border: solid 2px #111

    i.icon-chevron-right
      position: absolute
      top: 12px
      left: -12px
      color: #fd9

    i.icon-star
      opacity: 0
      position: absolute
      top: -12px
      right: -12px

      &.starred { opacity: 1; color: #fc3 }
      &:hover { opacity: 1; color: #fd9 }

    &.select img { border-color: #ff6 }

#image
  max-height: 400px

::-webkit-scrollbar
  height: 3px
  width: 3px
  overflow: visible

::-webkit-scrollbar-button, ::-webkit-scrollbar-corner
  height: 0
  width: 0

::-webkit-scrollbar-thumb
  border-radius: 3px
  background: rgba(0, 0, 0, 0.3)
